[module/date]
    type = internal/date
    interval = 1.0
    date = "%A"
    date-alt = "%B %d"
    time = "%I:%M %p"
    time-alt = "%I:%M %p"
    label = %date% %time%

    label-active-font = 1

    format = <label>
    format-padding = 0
    format-prefix = 
    format-prefix-background = ${colors.date_bg}
    format-prefix-foreground = ${colors.text_dark}
    format-prefix-padding = 1

    label-background = ${colors.text_light}
    label-foreground = ${colors.text_dark}
    label-padding = 1
