# Terminal emulator
super + t
    kitty

# Launcher
super + Return
    rofi -show run

# Focus node
super + {h,j,k,l}
    bspc node -f {west, south, north, east}

# Move node
super + shift + {h,j,k,l}
    bspc node -n {west, south, north, east}

# Focus desktop
super + {1-9}
    bspc desktop -f '^{1-9}'

# Move to another desktop
super + shift + {1-9}
  bspc node -d '^{1-9}'

# Close and kill window
super + {_,shift + }q
    bspc node -{c,k}

# Float node
super + f
    bspc node -t ~floating
